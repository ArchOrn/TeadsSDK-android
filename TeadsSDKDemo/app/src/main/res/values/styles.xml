<resources>

    <!-- Base application theme. -->
    <style name="Theme.Teads" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryDef</item>
        <item name="colorPrimaryDark">@color/primaryDarkDef</item>
        <item name="colorAccent">@color/primaryDef</item>
        <item name="android:textColorPrimary">@color/accent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="drawerArrowStyle">@style/Theme.Teads.DrawerArrowStyle</item>

    </style>

    <style name="Theme.Teads.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:padding">@dimen/button_padding_vertical_material</item>
        <item name="android:background">@color/lightBackground</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/button_padding_vertical_material</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/button_margin_material</item>
    </style>


</resources>
